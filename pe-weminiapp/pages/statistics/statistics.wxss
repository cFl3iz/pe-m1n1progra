/* pages/statistics/statistics.wxss */

.notice-empty-container {
  padding-top: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.notice-empty-text {
  color: #757575;
}

/*顶部销售代表详情  */

.top-container {
  background-color: #212121;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* padding-top: 60rpx; */
}

.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.avatar-image {
  width: 140rpx;
  height: 140rpx;
  border:8rpx #ffffff solid;
  border-radius: 80rpx;
}

.userinfo-text-container {
  position: relative;
  text-align: center;
  padding-bottom: 20rpx
}

.user-name {
  color: #eccd94;
  font-size: 40rpx;
  margin-top: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 300rpx;
  font-weight: bold
}

.user-lable {
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
  position: absolute;
  right: -60rpx;
  bottom: 0;
}

.statistics-info {
  display: flex;
  flex-direction: row;
  background-color: #474747;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 20rpx;
}

.statistics-text {
  display: flex;
  flex-direction: column;
}

.statistics-text text {
  color: #fff;
  text-align: center;
}

.statistics-btn {
  background-color: #474747;
  color: #fff;
  padding: 0 70rpx;
  border-radius: 26rpx;
  border: 2rpx #fff solid;
  font-size: 26rpx
}

.number {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff
}

.totle {
  font-size: 24rpx;
  color:#fff
}
.statistics-totle{
  padding:0 20rpx;background-color:#fff;border-bottom:1rpx #e0e0e0 solid
}
