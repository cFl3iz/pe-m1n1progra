/*首页*/
.home-flex-wrap {
  flex-wrap: wrap;
  height: 100vh;
  background-color: #fff;
}

.home-item {
  width: 50%;
  align-items: center;
  justify-content: center;
  display: flex;
  border-bottom: 1rpx solid #d9d9d9;
  box-sizing: border-box;
}
.weui-grid__icon {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
