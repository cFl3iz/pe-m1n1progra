<view class="page">
  <view class="page__bd">
    <view class="weui-flex" style='flex-wrap:wrap;height:100vh;background-color:#ffffff'>
      <view  style='width:50%;align-items:center;justify-content:center;display:flex;border-bottom: 1rpx solid #d9d9d9;border-right:{{(index+1)%2==0?0:"1rpx solid #d9d9d9"}};box-sizing:border-box' wx:for="{{grids}}" wx:key="*this" wx:item='item' wx:index='index'>
        <navigator url="{{item.router}}" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="{{item.url}}" />
          <view class="weui-grid__label"><text style='color:#424242'>{{item.type}}</text></view>
        </navigator>
      </view>
    </view>
  </view>
</view>