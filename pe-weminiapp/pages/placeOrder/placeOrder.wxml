<!--pages/placeOrder/placeOrder.wxml-->
<view class="container">

  <!--设置收货地址  -->
  <view class='address-container'>
    <view class='place-order-address' hover-class="weui-cell_active" bindtap="address">
      <image src="../../images/product/Plus@3x.png" class='address-icon' />
      <view class='address-text'>
        设置收货地址
      </view>
    </view>
    <view wx:if="{{address!=null}}" class='select-address'>
      <view class='address-userName'>
        <view>收货人: {{address.userName}}</view>
        <view>{{address.telNumber}}</view>
      </view>
      <view class='address-detailInfo'>
        {{address.provinceName}} {{address.cityName}} {{address.countyName}} {{address.detailInfo}}
      </view>
    </view>
  </view>

  <!--商品清单  -->
  <view style='margin-bottom:20rpx'>
    <view class='product-title'>商品清单</view>
    <view class='shopping-product-container' wx:for="{{shoppingData}}" wx:key="idx" wx:for-index="idx">
      <image src='https://{{item.detailImage}}' mode='aspectFill'></image>
      <view class='product-text-container'>
        <view class="s-title">商品编号：{{item.productId}}</view>
        <view class="l-title">{{item.productName}}</view>
        <view class='price-steper-container'>
          <view class="l-title ">¥ {{item.price}}</view>
          <view class="l-title ">x{{item.amount}}</view>
        </view>
      </view>
    </view>
  </view>

  <!--订单金额  -->
  <view class='place-order-price-container'>
    <view>
      <text class='left-text'>商品金额</text>
      <text class='right-text'>¥{{total}}</text>
    </view>
    <view>
      <text class='left-text'>运费</text>
      <text class='right-text'>¥0</text>
    </view>
    <view wx:if='{{preferential>0}}'>
      <text class='left-text'>促销（{{discount}}折）</text>
      <text class='right-text'>¥-{{preferential}}</text>
    </view>
  </view>

  <!--底部按钮栏  -->
  <view class='bottom-btn-container'>
    <view class='bottom-text'>
      <view style='font-size:24rpx;color:#000000'>实付:</view>
      <view style='font-size:34rpx;color:#000000;font-weight:bold'> ¥ {{total-preferential}} </view>
    </view>
    <button class='bottom-btn' bindtap='placeOrder'>付款</button>
  </view>
</view>