<import src="/templates/emptyPage.wxml" />

<view class="container">
  <!--产品列表  -->
  <scroll-view class="page__bd">
    <view class="product-list">
      <view class='product-item' wx:for="{{productsData}}" wx:key="*this" wx:item='item'>
        <navigator url="/pages/productDetail/productDetail?productId={{item.productId}}" hover-class="navigator-hover">
          <image lazy-load='true' class='product-image' src="http://{{item.detailImageUrl}}" mode='aspectFill'/>
        </navigator>
        <view class='product-detail-block'>
            <text class='product-name'>{{item.productName}}</text>
            <text class='product-price'>¥ {{item.price}}</text>
        </view>
      </view>
    </view>
  </scroll-view>
</view>

<!--没有商品时，显示空页面  -->
<template is="emptyPage" data="{{text:'圈内商品'}}" wx:if="{{productsData.length===0}}"></template>