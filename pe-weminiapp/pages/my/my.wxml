<view class="container">
  <!--上部信息-->
  <view class="user flex-wrp" catchtap="mimeinfo">
    <view class="avatar flex-item">
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    </view>
    <view class="user-info flex-item">
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <text class="edit">查看或编辑个人主页</text>
    </view>
  </view>
  <!--下部信息-->
  <view class="my">
    <view class="my-item flex-wrp" catchtap="addressAdd">
      <view class="myitem-icon flex-item">
        <image src="../../images/mine/icon_already_complete.png"></image>
      </view>
      <view class="myitem-name flex-item" >
        <text>管理地址</text>
      </view>
    </view>
    <view class="my-item flex-wrp" catchtap="deliveryInfo">
      <view class="myitem-icon flex-item">
        <image src="../../images/mine/icon_already_shipped.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>物流信息</text>
      </view>
    </view>
    <view class="my-item flex-wrp" catchtap="no_comment">
      <view class="myitem-icon flex-item">
        <image src="../../images/mine/icon_no_comment.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>相关讨论</text>
      </view>
    </view>
    <view class="my-item flex-wrp" catchtap="customer_service">
      <view class="myitem-icon flex-item">
        <image src="../../images/mine/icon_customer_service.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>设置</text>
      </view>
    </view>
    <view class="my-item flex-wrp" catchtap="coupon">
      <view class="myitem-icon flex-item">
        <image src="../../images/mine/book.png"></image>
      </view>
      <view class="myitem-name flex-item">
        <text>关于</text>
      </view>
    </view>
  </view>
</view>