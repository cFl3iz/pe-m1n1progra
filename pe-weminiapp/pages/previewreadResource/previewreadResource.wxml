<view wx:if="{{showComment}}" class="comment-wrapper">

  <view class="comment-form">
    <form bindsubmit="submitComment">
      <view class="comment-text">
        <textarea auto-height="true" fixed="true" name="comment" placeholder="评论" />
      </view>
      <button form-type="submit" size="mini" class="btn-primary comment-btn" hover-class="btn-primary-hover"> 提交 </button>
    </form>
  </view>
</view>

<view class="comment-panel">
  <!--没有评论 S-->
  <view class="comment-none" wx:if="{{comments == null}}">
    <view>暂无评论 ～</view>
  </view>
  <!--没有评论 E-->
  <!-- 一条评论 S-->
  <view wx:if="{{relationList.length != 0}}" >
        <text style='color:#ee735c;font-size:45rpx;'>卖家[{{salerName}}]到底是谁?</text>
        <view class="comment-item" wx:for="{{relationList}}" wx:for-item="Ritem">
                <image src="https://{{Ritem.relationPartyAvatar}}" class="q-avatar"></image>
            <text class="comment-username">{{Ritem.relationDisc}}</text>
        </view>
  </view>

  <view wx:if="{{comments != null}}">
    <view class="comment-item" wx:for="{{comments}}" wx:for-item="Citem">
      <view class="comment-avatar">
        <image src="https://{{Citem.userInfo.headPortrait}}"></image>
      </view>
      <view class="comment-main">
        <text class="comment-username">{{Citem.userInfo.firstName}}:</text>
        <view class="comment-content">　　{{Citem.text}}</view>
        <view class="comment-sub">
          <text class="comment-time">-{{Citem.ts}}</text>

        </view>

      </view>
    </view>
  </view>
  <!-- 一条评论 E-->
</view>

<modal class="orderPropBox" hidden="{{hiddenmodalput}}" title="选择购买数量及备注" confirm-text="确认" cancel-text="" bindcancel="cancel" bindconfirm="confirm">
  <!-- 主容器 -->  
<view class="stepper">  
    <!-- 减号 -->  
    <text class="{{minusStatus}}" bindtap="bindMinus">-</text>  
    <!-- 数值 -->  
    <input type="number" bindchange="bindManual" value="{{num}}" />  
    <!-- 加号 -->  
    <text class="normal" bindtap="bindPlus">+</text>  
</view>  
<view class='commntBox'>
  <input style='float:left;' type='text' bindinput="input" value="{{remark}}" placeholder="点此处给卖家的留言.." />
</view>  
</modal>

<view class="btn-wrapper" wx:if="{{nowPartyId !== payToPartyId}}">
  <button type='leftbtn' wx:if="{{bookInfo.availableToPromiseTotal > 0 }}" catchtap='contactC' class='leftbtn'>下单</button>
  <button type='leftbtn' wx:if="{{bookInfo.availableToPromiseTotal <= 0 }}"  class='leftbtn'>卖完了</button>
  <button  type='rightbtn' catchtap='contactB' class='rightbtn'>联系资源主</button>
</view>
<view class="top" catchtap="goHome">←</view>

<action-sheet hidden="{{actionSheetHidden}}" bindchange="actionSheetChange">
  <block wx:for-items="{{actionSheetItems}}">
    <action-sheet-item bindtap="bind{{item}}" data-item="{{item}}">{{item.desc}}</action-sheet-item>
  </block>
  <action-sheet-cancel >取消</action-sheet-cancel>
</action-sheet>


</view>

