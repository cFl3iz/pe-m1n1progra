<view class="weui-form-preview">
    <view class="weui-form-preview__hd">
        <view class="weui-form-preview__item">
            <view class="weui-form-preview__label">订单总价</view>
            <view class="weui-form-preview__value_in-hd">¥ {{ orderDetail.unitPrice }}</view>
        </view>
    </view>
    <view class="weui-form-preview__bd">
        <view class="weui-form-preview__item" wx:for="{{ order.item.items }}" wx:key="">
            <view class="weui-form-preview__label">{{ orderDetail.productName }}</view>
            <view class="weui-form-preview__value">x{{ orderDetail.unitPrice }} ¥ {{ item.meta.totalAmount }}</view>
        </view>
    </view>
    <view class="weui-form-preview__ft">
        <navigator class="weui-form-preview__btn weui-form-preview__btn_default" hover-class="weui-form-preview__btn_active">联系商家</navigator>
        <navigator class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">物流信息</navigator>
    </view>
</view>

<view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">配送信息</view>
    <view class="weui-panel__bd">
        <!-- <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__desc">送达时间：尽快送达</view>
        </view> -->
        <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__desc">收货地址：{{orderDetail.personAddressInfoMap.contactAddress}}</view>
        </view>
        <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__desc">配送方式：商家配送</view>
        </view>
    </view>
</view>

<view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">订单信息</view>
    <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__desc">订单号：{{ orderDetail.orderId }}</view>
        </view>
        <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__desc">支付状态：{{orderDetail.orderPayStatus}}</view>
        </view>
        <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__desc">下单时间：{{ orderDetail.orderDate.month }}月{{ orderDetail.orderDate.day }}日</view>
        </view>
    </view>
</view>