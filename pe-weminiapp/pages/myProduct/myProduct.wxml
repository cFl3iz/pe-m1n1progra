<view>
<text class='tips'>Tips:长按图片可以永久移除,点击可以编辑。</text>
  <view>
    <scroll-view class="scroll" scroll-top="{{scrollTop}}" style="height:580px;" scroll-y="true" bindscroll="scrll" bindscrolltolower="loadMore">
    
      <view  class="block" wx:for="{{myProductList}}" wx:for-item="item"> 
        <image bindlongtap="longTap" bindtouchstart="touchStart" bindtouchend="touchEnd"  bindtap='editProduct' data-productid="{{item.productId}}" src="https://{{item.detailImageUrl}}" class="img"></image>
        
        <text class='productName'>{{item.productName}}</text><text class='inventoryQuantity'>库存:5件</text>
         
        <view class='donBox'>
        <button class='leftBtn' data-productid="{{item.productId}}" bindtap='salesDiscontinuation'>下架</button><button class='rightBtn' open-type="share">转发</button>
        </view>
      </view>
    </scroll-view>
  </view>
  <view class="top" hidden="{{hidden}}" catchtap="goTop">故</view>
</view>