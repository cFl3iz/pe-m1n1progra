}

/*购物车  */

.tools_btn {
  background-color: #999;
  width: 68rpx;
  height: 68rpx;
  border-radius: 34rpx;
  margin: 24rpx 34rpx 0 0;
  border-color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: content-box;
  padding: 0;
}

.shopping_car {
  width: 42rpx;
  height: 42rpx;
}

/*底部按钮  */

.bottom-btns-container {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  width: 98vw;
  margin: 1vw 1vw;
}

.bottom-btns-container button {
  flex: 1;
  border-radius: 0;
  border: 1rpx solid #000;
  color: #000;
  background-color: #fff;
}

.bottom-btns-container button:first-child {
  color: #fff;
  background-color: #000;
}

.zan-panel {
  margin-top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: none;
  padding-bottom: 30rpx;
  justify-content: flex-end;
}

.zan-panel::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
  border-top-width: 0;
  border-bottom-width: 0;
}

.zan-badge__count {
  position: absolute;
  top: -16px;
  height: 1.6em;
  min-width: 1.6em;
  line-height: 1.6;
  padding: 0;
  font-size: 20px;
  border-radius: 0.8em;
  background: #f44;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  transform: translateX(50%) scale(0.5);
  transform-origin: center;
  z-index: 10;
  box-shadow: 0 0 0 2px #fff;
  box-sizing: border-box;
}

.share_btn {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}

.share_btn text {
  font-size: 22rpx;
  color: #000;
  width: 100%;
  text-align: center;
}
