/* pages/productDetail/productDetail.wxss */

.container {
  padding-bottom: 80px;
}

.flex-column-container {
  padding: 30rpx;
  margin-bottom: 20rpx;
  align-items: flex-start;
  background-color: #fff;
}

.flex-row-container {
  justify-content: space-between;
