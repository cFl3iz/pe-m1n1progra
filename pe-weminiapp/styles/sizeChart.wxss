/*尺码表  */

.table {
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
  font-size: 20rpx;
}

.bg-w {
  background: #fff;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #fff;
  color: #000;
  display: flex;
  height: 2rem;
  align-items: center;
  font-size: 23rpx;
}